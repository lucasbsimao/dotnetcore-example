@model ClienteViewModel

<div style="text-align: center;">
<div class="polaroid">
    <img src="~/img/produto-@(Model.ProdutoSelecionado.Id+1).jpg" style="width:100%; height: 100%">
    <div class="sub-img-container">
        <p>
            @Html.Label("prod-" + @Model.ProdutoSelecionado.Id, @Model.ProdutoSelecionado.Nome + " - R$ ")
            @Html.DisplayFor(model => model.ProdutoSelecionado.Preco)
        </p>
    </div>
</div>
<br />
<br />
<div style="text-align: center; width: 100%;">
<div class = "formulario">
    <form asp-controller="Cliente" asp-action="Cliente" method="post">
        @Html.Label("label-nome-compl", "Nome completo: ")
        @Html.TextBoxFor(model => model.Customer.Name )
        <br />
        @Html.Label("label-identidade", "Tipo de identidade: ")
        @Html.DropDownListFor( model => model.Customer.IdentityType , Model.ListaIdentidades)
        <br />
        @Html.Label("label-num-cartao", "Identidade: ")
        @Html.TextBoxFor(model => model.Customer.Identity)
        <br />
        @Html.Label("label-nom-cartao", "Email: ")
        @Html.TextBoxFor(model => model.Customer.Email)
        <br />
        @Html.Label("label-dat-nasc", "Data de nascimento: ")
        @Html.TextBoxFor(model => model.Customer.Birthdate, htmlAttributes: new { placeholder = "9999-99-99"})
        <br />
        <input value="Preencher EndereÃ§o" class="button" type="submit">
    </form>
</div>
</div>
<br />
<br />
</div>